<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <item name="colorPrimary">@color/primary</item>
        <!-- <item name="colorAccent">@color/material_green_A200</item> -->
    </style>

    <color name="black">#FF000000</color>
    <color name="darkgray">#FF102030</color>
    <color name="gray">#FF282828</color>
    <color name="lightgray">#FFc0c0c0</color>
    <color name="white">#FFF0F0F0</color>

    <color name="section_background">#FF202020</color>
    <color name="primary">#1a305d</color>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="android:windowBackground">@color/black</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>
    
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ButtonTheme" parent="AppTheme">
        <item name="android:background">@android:drawable/btn_default</item>
    </style>
    
    <style name="StatusTheme" parent="AppTheme">
        <item name="android:background">@color/darkgray</item>
    </style>
    
    <style name="SidebarTheme" parent="AppTheme">
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>
    
    <style name="SidebarDetailsTheme" parent="AppTheme">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="SidebarSequenceTheme" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>
    
    <style name="SidebarSectionTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/section_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
