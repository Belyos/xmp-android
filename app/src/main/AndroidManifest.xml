<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name="XmpApplication"
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme.Composable">

        <!-- Playlist and File browser -->
        <activity
            android:name=".compose.ui.menu.PlaylistMenu"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@style/AppTheme.Composable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".browser.FilelistActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".browser.PlaylistActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme" />

        <!-- Player -->
        <activity
            android:name=".player.PlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="audio/it" />
                <data android:mimeType="audio/mod" />
                <data android:mimeType="audio/s3m" />
                <data android:mimeType="audio/x-it" />
                <data android:mimeType="audio/x-mod" />
                <data android:mimeType="audio/x-s3m" />
                <data android:mimeType="audio/x-xm" />
                <data android:mimeType="audio/xm" />
                <data android:scheme="content" />
                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:host="*" />
                <data android:mimeType="*/*" />
                <data android:scheme="content" />
                <data android:scheme="file" />
                <data android:pathPattern=".*\\.669" />
                <data android:pathPattern=".*\\.amf" />
                <data android:pathPattern=".*\\.imf" />
                <data android:pathPattern=".*\\.it" />
                <data android:pathPattern=".*\\.itz" />
                <data android:pathPattern=".*\\.j2b" />
                <data android:pathPattern=".*\\.m15" />
                <data android:pathPattern=".*\\.mdl" />
                <data android:pathPattern=".*\\.mdz" />
                <data android:pathPattern=".*\\.med" />
                <data android:pathPattern=".*\\.mod" />
                <data android:pathPattern=".*\\.mtm" />
                <data android:pathPattern=".*\\.psm" />
                <data android:pathPattern=".*\\.s3m" />
                <data android:pathPattern=".*\\.s3z" />
                <data android:pathPattern=".*\\.stm" />
                <data android:pathPattern=".*\\.umx" />
                <data android:pathPattern=".*\\.xm" />
                <data android:pathPattern=".*\\.xmz" />

                <!-- Ugly! http://stackoverflow.com/questions/3400072/ -->

                <data android:pathPattern=".*\\..*\\..*\\.IT" />
                <data android:pathPattern=".*\\..*\\..*\\.MOD" />
                <data android:pathPattern=".*\\..*\\..*\\.S3M" />
                <data android:pathPattern=".*\\..*\\..*\\.XM" />
                <data android:pathPattern=".*\\..*\\..*\\.it" />
                <data android:pathPattern=".*\\..*\\..*\\.mod" />
                <data android:pathPattern=".*\\..*\\..*\\.s3m" />
                <data android:pathPattern=".*\\..*\\..*\\.xm" />
                <data android:pathPattern=".*\\..*\\.669" />
                <data android:pathPattern=".*\\..*\\.IT" />
                <data android:pathPattern=".*\\..*\\.MOD" />
                <data android:pathPattern=".*\\..*\\.S3M" />
                <data android:pathPattern=".*\\..*\\.XM" />
                <data android:pathPattern=".*\\..*\\.amf" />
                <data android:pathPattern=".*\\..*\\.imf" />
                <data android:pathPattern=".*\\..*\\.it" />
                <data android:pathPattern=".*\\..*\\.itz" />
                <data android:pathPattern=".*\\..*\\.j2b" />
                <data android:pathPattern=".*\\..*\\.m15" />
                <data android:pathPattern=".*\\..*\\.mdl" />
                <data android:pathPattern=".*\\..*\\.mdz" />
                <data android:pathPattern=".*\\..*\\.med" />
                <data android:pathPattern=".*\\..*\\.mod" />
                <data android:pathPattern=".*\\..*\\.mtm" />
                <data android:pathPattern=".*\\..*\\.psm" />
                <data android:pathPattern=".*\\..*\\.s3m" />
                <data android:pathPattern=".*\\..*\\.s3z" />
                <data android:pathPattern=".*\\..*\\.stm" />
                <data android:pathPattern=".*\\..*\\.umx" />
                <data android:pathPattern=".*\\..*\\.xm" />
                <data android:pathPattern=".*\\..*\\.xmz" />
                <data android:pathPattern=".*\\.IT" />
                <data android:pathPattern=".*\\.MOD" />
                <data android:pathPattern=".*\\.S3M" />
                <data android:pathPattern=".*\\.XM" />
            </intent-filter>
        </activity>

        <!-- Preferences -->
        <activity
            android:name=".compose.ui.preferences.Preferences"
            android:theme="@style/AppTheme.Composable" />
        <activity
            android:name=".compose.ui.preferences.about.ListFormats"
            android:exported="false"
            android:theme="@style/AppTheme.Composable">
            <intent-filter>
                <action android:name="org.helllabs.android.xmp.LIST_FORMATS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".compose.ui.preferences.about.About"
            android:exported="false"
            android:theme="@style/AppTheme.Composable">
            <intent-filter>
                <action android:name="org.helllabs.android.xmp.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- ModArchive search & download -->
        <activity
            android:name=".modarchive.Search"
            android:theme="@style/AppTheme.Composable"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".compose.ui.menu.PlaylistMenu" />
        </activity>
        <activity
            android:name=".modarchive.SearchError"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".modarchive.result.TitleResult"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modarchive.Search" />
        </activity>
        <activity
            android:name=".modarchive.result.ArtistResult"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modarchive.Search" />
        </activity>
        <activity
            android:name=".modarchive.result.ArtistModulesResult"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modarchive.Search" />
        </activity>
        <activity
            android:name=".modarchive.result.ModuleResult"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modarchive.Search" />
        </activity>
        <activity
            android:name=".modarchive.result.RandomResult"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".modarchive.Search" />
        </activity>

        <!-- Service -->
        <service android:name=".service.PlayerService" />
        <service
            android:name="com.telly.groundy.GroundyService"
            android:exported="false" />

        <receiver
            android:name=".service.receiver.MediaButtonsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".service.receiver.RemoteControlReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".service.receiver.NotificationActionReceiver" />

        <!--
             For listening to headset changes, the broadcast receiver
             cannot be declared in the manifest, it must be dynamically
             registered.
        -->
    </application>

</manifest>
